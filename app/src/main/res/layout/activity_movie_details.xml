<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/MovieDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/top_bg"
        android:padding="40dp">

        <Button
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/top_arrow" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/top_menu" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8A070707"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@drawable/rating"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/MovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moster, Bosnia\nand Herzegovina"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/MovieYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The heavenly land built with love\nand magic"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Description"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginBottom="10dp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">




            <Button
                android:id="@+id/BookTickets"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/button_bg"
                android:text="Book Ticket"
                android:textColor="#fff"
                android:textSize="14dp" />

</LinearLayout>

    </LinearLayout>

</LinearLayout>